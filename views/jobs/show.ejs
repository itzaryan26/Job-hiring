<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title"><%= job.title %></h2>
                <h5 class="card-subtitle mb-2 text-muted"><%= job.company %> - <%= job.location %></h5>
                <p class="card-text"><strong>Type:</strong> <%= job.type %></p>
                <p class="card-text"><strong>Salary:</strong> <%= job.salary %></p>
                <h4>Description</h4>
                <p class="card-text"><%= job.description %></p>
                <h4>Requirements</h4>
                <p class="card-text"><%= job.requirements %></p>
                
                <div class="mt-4">
                    <a href="/applications/create/<%= job._id %>" class="btn btn-primary">Apply Now</a>
                    <a href="/jobs/<%= job._id %>/edit" class="btn btn-secondary">Edit</a>
                    <form action="/jobs/<%= job._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>