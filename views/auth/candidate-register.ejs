<div class="auth-container">
    <div class="card">
        <h2>Candidate Registration</h2>
        <form action="/auth/candidate/register" method="POST">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="candidateDetails.fullName" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="tel" name="candidateDetails.phone" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Register as Candidate</button>
        </form>
    </div>
</div>