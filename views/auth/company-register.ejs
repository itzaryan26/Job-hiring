<div class="auth-container">
    <div class="card">
        <h2>Company Registration</h2>
        <form action="/auth/company/register" method="POST">
            <div class="form-group">
                <label>Company Email</label>
                <input type="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Company Name</label>
                <input type="text" name="companyDetails.name" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Website</label>
                <input type="url" name="companyDetails.website" class="form-control">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Register as Company</button>
        </form>
    </div>
</div>