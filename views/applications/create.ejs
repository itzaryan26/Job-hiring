<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>Apply for <%= job.title %> at <%= job.company %></h2>
        <form action="/applications" method="POST">
            <input type="hidden" name="job" value="<%= job._id %>">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="applicantName" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input type="tel" name="phone" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Resume Link</label>
                <input type="url" name="resume" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Cover Letter</label>
                <textarea name="coverLetter" class="form-control" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Application</button>
        </form>
    </div>
</div>